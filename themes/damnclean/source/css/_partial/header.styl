#header
  text-shadow 0 0 1px #fff
  margin 50px auto
  margin-left auto
  margin-right auto
  width 900px
  max-width 100%

  a
    color ##58fb8
    &:hover
      color color-link
      text-decoration none
    
  h1
    font-weight bold
    font-size 2.5em
    line-height 1

  h2
    font-weight bold
    font-size 0.9em
    line-height 1
    margin-top 10px
  
  #main-nav
    font-family font-title
    line-height 2.5em
    float right
    ul
      list-style none
      li
        float left
        margin-left 30px
    @media screen and (max-width: 600px)
      float left
      margin-left -30px